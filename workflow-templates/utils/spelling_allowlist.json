// This configuration file sets options for spell-checking pull requests
// onto QIR Alliance repositories. Please see
//     https://github.com/streetsidesoftware/cspell/tree/main/packages/cspell#cspelljson
// for more documentation about this config file.
{
    "ignoreWords": [
        // # PyQIR terminology
        "pyqir",
        "qat",
        "qirlib",
        "bitcode",
        "entrypoint",
        "eval",

        // # Python terminology (and packages)
        "conda",
        "setuptools",
        "pycache",
        "sdist",
        "htmlcov",
        "nosetests",
        "pytest",
        "webassets",
        "Scrapy",

        // # Rust terminology (and packages)
        "rustfmt",
        "clippy",
        "pymodule",
        "pyclass",
        "pymethods",
        "pyobj",
        "tempfile",
        "cdylib",
        "maturin",
        "autopep",

        // # Terms that come up in build / CI configuration
        "pwsh",
        "ccache",
        "sccache",
        "choco",
        "POSIX",
        "markdownlint",
        "cmake",
        "stylecheck",
        "LDFLAGS",
        "CFLAGS"
        "CPPFLAGS",

        // # Words, terms, and names specific to quantum computing
        "CHSH",
        "CNOT",
        "Chuang",
        "eigenstate",
        "kata",
        "qsharp",
        "qubit",
        "qubits",
        "qubit's",
        "qubitization",
        "qubitized",
        "wavefunction",
        "Hadamard",

        // # Mathematics terminology
        "binom", // Common shorthand for "binomial."
        "coeff", // Common shorthand for "coefficient."
        "coeffs",
        "eigen",
        "eigensystem",
        "sqrtm", // Common shorthand for "matrix square root," popularized by
                 // MATLAB and SciPy.
        "renormalizing",
        "unnormalized",
        "scalarize",

        // # Physics terminology
        "Ising",
        "elementwise",

        // # Chemistry terminology
        "fermionic",
        "nitrogenase",
        "Hartree",
        "Fock",
        "nwchem",

        // # OCI tooling and Dockerfiles
        "buildpack",
        "deps",
        "WORKDIR",
        "dpkg",
        "NOPASSWD",
        
        // # Computing terminology
        "deallocate",
        "deallocates",
        "toolchain",
        "callable",
        "callables",

        // # LLVM terminology
        "inttoptr",
        "preds"
    ]
}